<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAO TRI XE HOI"
        android:textSize="24sp"
        android:layout_gravity="center"/>

    <RadioButton
        android:id="@+id/radio_bao_tri_dinh_ky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bảo trì định kỳ"/>

    <RadioButton
        android:id="@+id/radio_sua_chua_lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa chữa lớn"/>

    <RadioButton
        android:id="@+id/radio_sua_chua_nho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa chữa nhỏ"/>

    <RadioButton
        android:id="@+id/radio_kiem_tra_xe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiểm tra xe"/>

    <RadioGroup
        android:id="@+id/radioGroup_phap_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dịch vụ pháp lý"
            android:textSize="18sp"
            android:layout_gravity="center"/>

        <RadioButton
            android:id="@+id/radio_mua_bao_hiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hỗ trợ mua bảo hiểm"/>

        <RadioButton
            android:id="@+id/radio_kiem_dinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hỗ trợ kiểm định"/>
    </RadioGroup>

    \<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <Button
        android:id="@+id/choose_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE"/>

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"/>
</LinearLayout>
</LinearLayout>
